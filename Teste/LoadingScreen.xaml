<Window
    x:Class="Teste.LoadingScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Teste"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoadingScreen"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Opacity="0.8">
        <Grid.Background>
            <ImageBrush ImageSource="/img/ShowcaseLogo.png" />
        </Grid.Background>
        <ProgressBar
            Width="800"
            Height="50"
            Margin="0,225,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            IsIndeterminate="True">
            <ProgressBar.Foreground>
                <ImageBrush ImageSource="/img/OgreLoading.png" Stretch="Fill" />
            </ProgressBar.Foreground>
        </ProgressBar>
        <Label
            Width="100"
            Height="43"
            Margin="0,177,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Loading..."
            FontFamily="Artifakt Element Heavy"
            FontSize="20" />
    </Grid>
</Window>
