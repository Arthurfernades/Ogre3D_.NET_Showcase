<Window
    x:Class="Teste.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Teste"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myOgre="clr-namespace:OgreImage;assembly=OgreImage"
    Title="MainWindow"
    Width="1600"
    Height="800"
    Background="{x:Null}"
    Closing="Window_Closing"
    Icon="/img/ogre_icon.png"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0" Color="Black" />
                <GradientStop Offset="0.2" Color="#FF6B6B6B" />
            </LinearGradientBrush>
        </Grid.Background>
        <Image
            x:Name="NewMeshButton"
            Width="35"
            Height="35"
            Margin="120,60,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseDown="NewMeshButton_MouseDown"
            Source="/img/new_icon.png"
            ToolTip="Add New Mesh" />
        <ListBox
            x:Name="ObjectList"
            Width="147"
            Margin="10,100,0,40"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Center"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Foreground="{x:Null}" />
        <Label
            Width="144"
            Height="31"
            Margin="251,26,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Content="Sky"
            FontSize="16"
            Foreground="White" />
        <ComboBox
            x:Name="SkyComboBox"
            Width="144"
            Height="22"
            Margin="251,60,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectedIndex="0"
            SelectionChanged="SkyComboBox_SelectionChanged" />
        <Label
            Width="144"
            Height="31"
            Margin="467,26,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Content="Terreno"
            FontSize="16"
            Foreground="White" />
        <ComboBox
            x:Name="TerrainComboBox"
            Width="144"
            Height="22"
            Margin="467,60,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectedIndex="0"
            SelectionChanged="TerrainComboBox_SelectionChanged" />
        <Label
            Width="144"
            Height="31"
            Margin="0,26,278,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Content="Controle de luz"
            FontSize="16"
            Foreground="White" />
        <Slider
            x:Name="LightSlider"
            Width="144"
            Height="22"
            Margin="0,60,278,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Maximum="100"
            Minimum="-1"
            ValueChanged="LightSlider_ValueChanged" />
        <Label
            Width="144"
            Margin="681,26,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Content="Efeitos de câmera"
            FontSize="16"
            Foreground="White" />
        <ComboBox
            x:Name="CompositorsBox"
            Width="144"
            Height="22"
            Margin="681,62,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectedIndex="0"
            SelectionChanged="CompositorsBox_SelectionChanged" />
        <Image
            x:Name="PrintButton"
            Width="40"
            Height="40"
            Margin="0,100,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseDown="PrintButton_MouseDown"
            MouseEnter="PrintButton_MouseEnter"
            Source="/img/cam_icon.png"
            ToolTip="Save Image" />
        <Image
            x:Name="ImgButton"
            Width="40"
            Height="35"
            Margin="0,160,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseDown="ImgButton_MouseDown"
            Source="/img/img_icon.png"
            ToolTip="Background Image" />
        <Image
            x:Name="ZoomAllButton"
            Width="40"
            Height="35"
            Margin="0,220,9,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseDown="ZoomAllButton_MouseDown"
            Source="/img/zoomall_icon.png"
            ToolTip="Zoom All" />
        <Image
            x:Name="ProjectionTypeButton"
            Width="40"
            Height="35"
            Margin="0,280,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseDown="ProjectionTypeButton_MouseDown"
            Source="/img/ProjectionType_icon.png"
            ToolTip="Camera Projection" />
        <Image
            x:Name="AxisButton"
            Width="40"
            Height="35"
            Margin="0,340,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseDown="AxisButton_MouseDown"
            Source="/img/axis_icon.png"
            ToolTip="Global Grid" />
        <Image
            x:Name="CameraViewButton"
            Width="40"
            Height="35"
            Margin="0,400,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseDown="CameraViewButton_MouseDown"
            Source="/img/film_ico.png"
            ToolTip="FreeLook" />
        <Image
            x:Name="FogButton"
            Width="40"
            Height="35"
            Margin="0,460,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseDown="FogButton_MouseDown"
            Source="/img/fog_icon.png"
            ToolTip="Fog" />
        <Image
            x:Name="ClearSceneButton"
            Width="40"
            Height="35"
            Margin="0,0,10,40"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Cursor="Hand"
            MouseDown="ClearSceneButton_MouseDown"
            Source="/img/trash_icon.png"
            ToolTip="Delete" />
        <Grid x:Name="HostImgGrid" Margin="162,100,56,40">
            <myOgre:OgreControl
                x:Name="imgOgre"
                Margin="5"
                Focusable="True"
                Foreground="{x:Null}"
                Loaded="imgOgre_Loaded" />
        </Grid>
    </Grid>
</Window>
