<Window x:Class="Teste.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teste"
        xmlns:myOgre="clr-namespace:OgreImage;assembly=OgreImage" 
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1600"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized" Background="{x:Null}" Icon="/img/ogre_icon.png">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF6B6B6B" Offset="0.137"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="ObjectList" HorizontalContentAlignment="Center" Margin="10,100,0,40" HorizontalAlignment="Left" Width="147" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}"></ListBox>
        <Label Content="Sky" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="251,26,0,0" HorizontalContentAlignment="Center"  Foreground="White" Width="144" FontSize="16" Height="31"/>
        <ComboBox x:Name="SkyComboBox" SelectionChanged="SkyComboBox_SelectionChanged" HorizontalAlignment="Left" Margin="251,62,0,0" Width="144" Height="22" VerticalAlignment="Top" SelectedIndex="0"/>
        <Label Content="Terreno" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="467,26,0,0" HorizontalContentAlignment="Center"  Foreground="White" Width="144" FontSize="16" Height="31"/>
        <ComboBox x:Name="TerrainComboBox" SelectionChanged="TerrainComboBox_SelectionChanged" HorizontalAlignment="Left" Margin="467,61,0,0" VerticalAlignment="Top" Width="144" Height="22" SelectedIndex="0"/>
        <Label Content="Direção" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,7,129,0" Foreground="White" Width="69" FontSize="16" Height="33" VerticalAlignment="Top"/>
        <Button x:Name="NWButton" HorizontalAlignment="Right" Margin="0,40,183,0" VerticalAlignment="Top" Height="15" Width="15" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="NWButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/NW_direction_arrow_icon.png"/>
            </Button.Background>
        </Button>
        <Button  x:Name="SWButton" HorizontalAlignment="Right" Margin="0,80,183,0" VerticalAlignment="Top" Height="15" Width="15" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="SWButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/SW_direction_arrow_icon .png"/>
            </Button.Background>
        </Button>
        <Button x:Name="WButton" HorizontalAlignment="Right" Margin="0,60,183,0" VerticalAlignment="Top" Height="15" Width="15" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="WButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/W_direction_arrow_icon.png"/>
            </Button.Background>
        </Button>
        <Button  x:Name="NButton" HorizontalAlignment="Right" Margin="0,40,157,0" VerticalAlignment="Top" Height="15" Width="15" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="NButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/img/N_direction_arrow_icon.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="CenterButton" HorizontalAlignment="Right" Margin="0,60,157,0" VerticalAlignment="Top" Height="15" Width="15" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="CenterButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/Top_direction_icon.png"/>
            </Button.Background>
        </Button>
        <Button  x:Name="SButton" HorizontalAlignment="Right" Margin="0,80,157,0" VerticalAlignment="Top" Height="15" Width="15" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="SButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/S_direction_arrow_icon.png"/>
            </Button.Background>
        </Button>
        <Button  x:Name="NEButton" HorizontalAlignment="Right" Margin="0,40,129,0" VerticalAlignment="Top" Height="15" Width="15" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="NEButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/NE_direction_arrow_icon .png"/>
            </Button.Background>
        </Button>
        <Button  x:Name="EButton" HorizontalAlignment="Right" Margin="0,60,129,0" VerticalAlignment="Top" Height="15" Width="15" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="EButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/E_direction_arrow_icon.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="SEButton" HorizontalAlignment="Right" Margin="0,80,129,0" VerticalAlignment="Top" Height="15" Width="15" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="SEButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/SE_direction_arrow_icon.png"/>
            </Button.Background>
        </Button>
        <Label HorizontalContentAlignment="Center" Content="Controle de luz" HorizontalAlignment="Right" Margin="0,26,278,0" Foreground="White" Width="144" FontSize="16" Height="31" VerticalAlignment="Top"/>
        <Slider x:Name="LightSlider" Minimum="-1" Maximum="100" Margin="0,62,278,0" VerticalAlignment="Top" ValueChanged="LightSlider_ValueChanged" Height="22" HorizontalAlignment="Right" Width="144"/>
        <Label HorizontalContentAlignment="Center" Content="Efeitos de câmera" Margin="0,26,775,0" VerticalAlignment="Top" FontSize="16" Foreground="White" HorizontalAlignment="Right" Width="144"/>
        <ComboBox x:Name="CompositorsBox" Margin="681,62,0,0" SelectionChanged="CompositorsBox_SelectionChanged" Height="22" VerticalAlignment="Top" SelectedIndex="0" HorizontalAlignment="Left" Width="144" />
        <Button x:Name="PrintButton" Content="" Margin="0,108,10,0" VerticalAlignment="Top" Height="35" Click="PrintButton_Click" BorderBrush="{x:Null}" HorizontalAlignment="Right" Width="40" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/img/cam_icon.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="EyeButton" Content="" Margin="0,165,11,0" VerticalAlignment="Top" Height="35" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="EyeButton_Click" HorizontalAlignment="Right" Width="40">
            <Button.Background>
                <ImageBrush ImageSource="/img/opened_eye_icon.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="ImgButton" Content="Button" Margin="0,225,10,0" Height="35" VerticalAlignment="Top" HorizontalAlignment="Right" Width="40" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="ImgButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/img_icon.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="ZoomAllButton" HorizontalAlignment="Right" Margin="0,290,10,0" Height="35" Width="40" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="ZoomAllButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/zoomall_icon.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="ProjectionTypeButton" HorizontalAlignment="Right" Margin="0,348,11,0" Width="40" Height="35" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="ProjectionTypeButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/ProjectionType_icon.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="ClearSceneButton" Content="" Margin="0,0,10,40" Click="ClearSceneButton_Click" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="40" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/img/trash_icon.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="AxisButton" Margin="0,405,10,0" BorderBrush="{x:Null}" Foreground="{x:Null}" HorizontalAlignment="Right" Width="40" Height="35" VerticalAlignment="Top" Click="AxisButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/img/axis_icon.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="CameraViewButton" BorderBrush="{x:Null}" Foreground="{x:Null}" HorizontalAlignment="Right" Width="40" Height="35" VerticalAlignment="Top" Margin="0,464,10,0" Click="CameraViewButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/img/film_ico.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="FogButton" BorderBrush="{x:Null}" Foreground="{x:Null}" HorizontalAlignment="Right" Width="40" Height="35" VerticalAlignment="Top" Margin="0,518,11,0" Click="FogButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/fog_icon.png"/>
            </Button.Background>
        </Button>
        <Grid x:Name="HostImgGrid" Margin="162,100,56,40" Background="White">
            <myOgre:AuEOgre x:Name="imgOgre" Margin="5" Loaded="imgOgre_Loaded" Foreground="{x:Null}" Focusable="True" />
        </Grid>
        <Button x:Name="NewMeshButton" HorizontalAlignment="Left" Margin="127,61,0,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="34" Width="30" Click="NewMeshButton_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/img/new_icon.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
